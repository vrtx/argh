    "version": "0.2.0",
    "configurations": [
        "name": "C++ Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/argh/build/src/argh",
        "args": ["-i inputFile", "-dv"],
        "environment": [{ "name": "squid", "value": "clam" }],
        "cwd": "${workspaceFolder}",
        "launch": "argh",
        "linux": {
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
